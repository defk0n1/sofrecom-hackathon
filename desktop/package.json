{
  "name": "mailmate-ai-desktop",
  "version": "1.0.0",
  "description": "MailMate AI Desktop Application - Electron wrapper for the AI-powered email assistant",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"wait-on http://localhost:8080 http://localhost:5000 && electron .\"",
    "dev:frontend": "cd ../MailMate-AI && npm run dev",
    "dev:backend": "cd ../backend && python -m uvicorn main:app --host 0.0.0.0 --port 5000 --reload",
    "build": "npm run build:frontend && electron-builder",
    "build:frontend": "cd ../MailMate-AI && npm run build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "email",
    "ai",
    "assistant",
    "mailmate",
    "electron",
    "desktop"
  ],
  "author": "MailMate AI Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "com.mailmate.ai.desktop",
    "productName": "MailMate AI",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "backend/**/*",
      "!backend/__pycache__",
      "!backend/venv",
      "!backend/.env"
    ],
    "directories": {
      "output": "dist-electron"
    },
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__",
          "!venv",
          "!.env",
          "!*.pyc"
        ]
      },
      {
        "from": "../MailMate-AI/dist",
        "to": "frontend",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office",
      "target": ["AppImage", "deb"]
    }
  }
}
